{
  "manifest_version": 2,
  "name": "Right-click Steam Activator",
  "description": "Use the right-click menu to activate selected Steam key",
  "version": "2.1",
  "permissions": [
    "contextMenus",
    "cookies",
    "https://store.steampowered.com/",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": [
      "right-click-steam-activator.js"
    ]
  },
  "minimum_chrome_version": "88",
  "icons": {
    "16": "images/ico16.png",
    "32": "images/ico32.png",
    "48": "images/ico48.png",
    "64": "images/ico64.png",
    "128": "images/ico128.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_icon": "images/ico32.png"
  },
  "host_permissions": [
    "http://*/",
    "https://*/"
  ]
}